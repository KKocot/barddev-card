---
const techStack: { name: string; imageSrc: string }[] = [
  { name: "Astro", imageSrc: "/teck-icons/Astro.svg" },
  { name: "TypeScript", imageSrc: "/teck-icons/TypeScript.svg" },
  { name: "JavaScript", imageSrc: "/teck-icons/JavaScript.svg" },
  { name: "React", imageSrc: "/teck-icons/React.svg" },
  { name: "Next.js", imageSrc: "/teck-icons/Next.js.svg" },
  { name: "Tailwind CSS", imageSrc: "/teck-icons/Tailwind CSS.svg" },
  { name: "Vite.js", imageSrc: "/teck-icons/Vite.js.svg" },
  { name: "GitHub", imageSrc: "/teck-icons/GitHub.svg" },
  { name: "Docker", imageSrc: "/teck-icons/Docker.svg" },
  { name: "Cloudflare", imageSrc: "/teck-icons/Cloudflare.svg" },
  { name: "CSS3", imageSrc: "/teck-icons/CSS3.svg" },
  { name: "HTML5", imageSrc: "/teck-icons/HTML5.svg" },
  { name: "MongoDB", imageSrc: "/teck-icons/MongoDB.svg" },
  { name: "Figma", imageSrc: "/teck-icons/Figma.svg" },
];

const additionalTechStack: { name: string; imageSrc: string }[] = [
  { name: "Mongoose.js", imageSrc: "/teck-icons/Mongoose.js.svg" },
  { name: "ESLint", imageSrc: "/teck-icons/ESLint.svg" },
  { name: "Playwright", imageSrc: "/teck-icons/Playwrite.svg" },
  { name: "xlsx", imageSrc: "/teck-icons/xlsx-svgrepo-com.svg" },
  { name: "API", imageSrc: "/teck-icons/api-svgrepo-com.svg" },
  { name: "DNS", imageSrc: "/teck-icons/dns-svgrepo-com.svg" },
  { name: "blockchain", imageSrc: "/teck-icons/blockchain-svgrepo-com.svg" },
  { name: "Vercel", imageSrc: "/teck-icons/Vercel.svg" },
  { name: "Git", imageSrc: "/teck-icons/Git.svg" },
  { name: "Express", imageSrc: "/teck-icons/Express.svg" },
  { name: "Solid.js", imageSrc: "/teck-icons/Solid.js.svg" },
  { name: "GitLab", imageSrc: "/teck-icons/GitLab.svg" },
  { name: "Node.js", imageSrc: "/teck-icons/Node.js.svg" },
  { name: "Tanstack", imageSrc: "/teck-icons/tanstack.png" },
];
---

<style>
  .tech-carousel {
    animation: scroll-left 30s linear infinite;
  }

  .tech-carousel-right {
    animation: scroll-right 30s linear infinite;
  }

  @keyframes scroll-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @keyframes scroll-right {
    0% {
      transform: translateX(-50%);
    }
    100% {
      transform: translateX(0);
    }
  }

  .tech-carousel:hover,
  .tech-carousel-right:hover {
    animation-play-state: paused;
  }
</style>

<div class="card-body">
  <div class="bg-base-300 rounded-box mt-2 p-2">
    <h2 class="font-bold mt-4 text-2xl text-center">Tech Stack</h2>
    <div class="overflow-hidden rounded-box max-w-md p-4">
      <div class="tech-carousel flex space-x-4 w-max">
        {
          [...techStack, ...techStack].map((tech) => (
            <div class="carousel-item p-1 rounded-2xl shrink-0 flex flex-col items-center">
              <img src={tech.imageSrc} class="w-12" alt={tech.name} />
              <div class="text-xs font-semibold">{tech.name}</div>
            </div>
          ))
        }
      </div>
    </div>
    <div class="overflow-hidden rounded-box max-w-md p-4">
      <div class="tech-carousel-right flex space-x-4 w-max">
        {
          [...additionalTechStack, ...additionalTechStack].map((tech) => (
            <div class="carousel-item p-1 rounded-2xl shrink-0 flex flex-col items-center">
              <img src={tech.imageSrc} class="w-12" alt={tech.name} />
              <div class="text-xs font-semibold">{tech.name}</div>
            </div>
          ))
        }
      </div>
    </div>
  </div>
</div>
